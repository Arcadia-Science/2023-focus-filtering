[flake8]
max-line-length = 95

# reference: https://lintlyci.github.io/Flake8Rules
ignore =
    # white before ':' (may conflict with black)
    E203,
    # line break before a binary operator
    W503,
    # continuation line under-indented for visual indent
    E128,

exclude =
    .git,
    __pycache__,
    build,
    dist,
    docs,
    notebooks,
    ignore,
    .venv,
    .eggs,
    .tox,
